{%  extends'::base_admin.html.twig' %}
{% block body %}
<div class="content-page " style="background: white">
    <div class="content">

            <h1 class="blog_title " style="text-align: center;">Transport creation</h1>
            <div class="container" style="position: absolute; margin-left: 25%">
                {{ form_start(form) }}
                <div class="col-md-3">
                {{ form_label(form.titre , 'Titre :', {'label_attr': {'class': 'col-lg-12 col-form-label'}}) }}
                {{ form_widget(form.titre , {'id':'exemple-input-normal','attr': {'class': 'form-control input-sm '}}) }}</div>
                <div class="col-md-3">
                {{ form_label(form.nbrEnfant , "Nombre D'enfant :", {'label_attr': {'class': ' col-lg-12 col-form-label'}}) }}
                {{ form_widget(form.nbrEnfant , {'id':'exemple-input-normal','attr': {'class': 'form-control input-sm '}}) }}</div>
                <div class="col-md-3">
                {{ form_label(form.nbrBus , "Nombre De Bus :", {'label_attr': {'class': 'col-lg-12 col-form-label'}}) }}
                {{ form_widget(form.nbrBus , {'id':'exemple-input-normal','attr': {'class': 'form-control input-sm '}}) }}</div>
                <div class="col-md-3">
                {{ form_label(form.destination , 'Destination :', {'label_attr': {'class': 'col-lg-12 col-form-label'}}) }}
                {{ form_widget(form.destination , {'id':'exemple-input-normal','attr': {'class': 'form-control input-sm '}}) }}</div>
                <div class="col-md-3">
                {{ form_label(form.dateDebut , 'Date de Debut :', {'label_attr': {'class': 'col-lg-12 col-form-label'}}) }}
                {{ form_widget(form.dateDebut , {'id':'datetimepicker1','attr': {'class': 'input-group date'}}) }}</div>
                <div class="col-md-3">
                {{ form_label(form.dateFin , 'Date de Fin :', {'label_attr': {'class': ' col-lg-12 col-form-label'}}) }}
                {{ form_widget(form.dateFin , {'id':'datetimepicker1','attr': {'class': ' input-group date'}}) }}</div>
                <div class="col-md-3 ">
                {{ form_label(form.employee , 'Liste employee :', {'label_attr': {'class': 'col-lg-12 col-form-label'}}) }}
                {{ form_widget(form.employee , {'id':'exemple-input-normal','attr': {'class': 'form-control input-sm '}}) }}</div>
                    <div class="col-md-8" style="margin-top: 25px">
                    <input class="col-md-4" type="submit" value="create">
                    </div>
                {{ form_end(form) }}

                 <ul>
                    <li>
                         <a class="col-md-7" href="{{ path('transport_index') }}">Back to the list</a>
                    </li>
                 </ul>
            </div>
    </div>
</div>

{% endblock %}
