{% include ('base_admin.html.twig') %}
{% block body %}
    <div class="content-page" style="background: white">
    <div class="content">
        <div class="row">
            <div class="col-12">
                <div>
                    <h4 class="header-title mb-3">Ajouter un abonnement</h4>
                </div>
            </div>
        </div>
        <a  type="button" class="btn btn-primary btn-bordered-primary" href="{{ path('abonnement_show') }}" >
            <i class="ti-arrow-circle-left"></i> Retour Ã  la liste </a>
        <div class="container" style="position: absolute; left: 30%">

        {{ form_start(form) }}
        <div class="col-md-3">
            {{ form_label(form.type ,'Type', {'label_attr': {'class': 'col-lg-12 col-form-label'}} ) }}
            {{ form_widget(form.type ,{'id': 'example-input-normal' ,'attr': {'class': 'form-control input-sm' }} ) }}
        </div>
        <div class="col-md-3">
        {{ form_label(form.description,'Description', {'label_attr': {'class': 'col-lg-12 col-form-label'}}) }}
        {{ form_widget(form.description,{'id': 'example-input-normal' ,'attr': {'class': 'form-control input-sm' }}) }}
        </div>

        <div class="col-md-3">
        {{ form_label(form.prix,'Prix', {'label_attr': {'class': 'col-lg-12 col-form-label'}}) }}
        {{ form_widget(form.prix,{'id': 'example-input-normal' ,'attr': {'class': 'form-control input-sm' }}) }}
        </div>
        <div class="col-md-3" style="margin-top: 30px">
            <input type="submit" value="Create" class="btn btn-primary btn-bordered-primary" />
        </div>
        {{ form_end(form) }}
        </div>

    </div>
</div>
{% endblock %}
