{% include 'base_user.html.twig' %}
 {% include ':User:base_parent_header.html.twig' %}
<div class="container">


    <div class="send_us">
<div class="row">
<div class="col-md-12">
    <div class="leave_reply">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <h3 class="title">Send Us a Message</h3>
                <p class="description">Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo. Please provide your name, email and cell phone number.</p>

            </div>
            <div class="col-md-1">

            </div>
        </div>
        <div class="contact_form_blue">
            {% for flash_message in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    <p class="description">
                        {{ flash_message }}
                    </p>
                </div>
            {% endfor %}
            {{ form_start(f) }}
            <div id="form-messages"></div>
            <div class="form-group">
            {{ form_widget(f.subject,{'id': 'name','attr': {'placeholder': 'Sujet'}}) }}
            </div>
            <div class="form-group m_form-group">
            {{ form_widget(f.mail,{'id': 'email' ,'attr': {'class': 'm_input','placeholder': 'Votre E-mail' }}) }}
            </div>
            {{ form_widget(f.object,{'id' : 'message rows' ,'attr': {'rows': '4','placeholder': 'Text' } }) }}
            <div class="form-group m_form-group">
                <button class="button ui-button ui-corner-all ui-widget" type="submit">{{ form_widget(f.send) }}</button>
            </div>

            {{ form_end(f) }}
            </div>
        </div>
    </div>
</div>
</div>
    </div>
</div>

